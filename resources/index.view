<svg id='wrapper' class="background">
	<image
		height="100%"
		href="cooper2.png"
		id="cooper"
		layer="1"
		width="100%"
		x="0"
		y="17"
	/>
	<text
		class="time hours"
		id="hoursLabel"
		layer="2"
	/>
	<text
		class="time minutes"
		id="minutesLabel"
		layer="2"
	/>

	<!-- Top info bar -->
	<svg>
		<!-- Background -->
		<rect
			fill='black'
			height='33'
			layer="2"
			width='100%'
			x='0'
			y='0'
		/>

		<!-- TODO: Give this a class name and move styles there -->
		<section
			height='30'
			width='33%-50'
			x='50'
			y='0'
		>
			<text
				class="stat steps"
				fill="white"
				id="stepsLabel"
				layer="4"
				text-anchor="start"
			/>
			<rect
				fill='blue'
				height='100%'
				layer="3"
				width='100%'
			/>
		</section>

		<!-- TODO: Give this a class name and move styles there -->
		<g
			height='30'
			width='33% - 50'
			transform="translate('33%', 0)"
			x='0'
			y='0'
		>
			<text
				class="stat steps"
				fill="white"
				id="stepsLabel"
				layer="4"
				text-anchor="middle"
			/>
			<rect
				fill='red'
				height='100%'
				layer="3"
				width='100%'
			/>
		</section>

	</svg>
</svg>
